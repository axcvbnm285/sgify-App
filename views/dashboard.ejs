<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SGIFY | User Dashboard</title>

  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

  <style>
    body {
      background: #f9fafc;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .dashboard-header {
      background: linear-gradient(135deg, #007bff, #6610f2);
      color: white;
      border-radius: 12px;
      padding: 2rem;
      margin-bottom: 2rem;
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }
    .card {
      transition: all 0.3s ease;
      border-radius: 12px;
    }
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }
    .btn-custom {
      border-radius: 30px;
      font-weight: 500;
    }
    .list-group-item {
      border: none;
      padding-left: 0;
    }
    .progress {
      height: 25px;
      border-radius: 30px;
      background: #e9ecef;
    }
    .progress-bar {
      border-radius: 30px;
    }
  </style>
</head>
<body>

  <div class="container py-5">

    <!-- ===== HEADER ===== -->
    <div class="dashboard-header text-center">
      <h1 class="fw-bold">Welcome to SGIFY, <%= user.name %> ðŸŽ‰</h1>
      <p class="lead mb-0">Your personalized career guidance dashboard</p>
    </div>

    <!-- ===== MAIN ROW: Profile | Progress | Recommendations ===== -->
    <div class="row g-4">

      <!-- Profile Card -->
      <div class="col-md-4">
        <div class="card shadow-sm h-100">
          <div class="card-body">
            <h5 class="card-title text-primary">
              <i class="fas fa-user-circle"></i> Profile
            </h5>
            <p><strong>Email:</strong> <%= user.email %></p>
            <p><strong>Phone:</strong> <%= user.phonenumber || "Not provided" %></p>
            <p><strong>Education:</strong> <%= user.education || "Not provided" %></p>
            <p><strong>Member since:</strong> <%= new Date(user.createdAt).toDateString() %></p>

            <div class="text-center mt-4">
              <a href="/resume-upload" class="btn btn-success btn-lg">
                <i class="fas fa-file-upload"></i> Upload Resume
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Learning Progress -->
      <div class="col-md-4">
        <div class="card shadow-sm h-100">
          <div class="card-body">
            <h5 class="card-title text-success">
              <i class="fas fa-chart-line"></i> Learning Progress
            </h5>

            <div class="progress mb-3">
              <div class="progress-bar bg-success fw-bold" 
                   role="progressbar"
                   style="width: <%= user.progress || 0 %>%"
                   aria-valuenow="<%= user.progress %>"
                   aria-valuemin="0"
                   aria-valuemax="100">
                   <%= user.progress %>% 
              </div>
            </div>
            <p class="text-muted">Keep going! You're closer to success ðŸš€</p>
          </div>
        </div>
      </div>

      <!-- Career Recommendations -->
      <div class="col-md-4">
        <div class="card shadow-sm h-100 d-flex flex-column">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title text-info">
              <i class="fas fa-lightbulb"></i> Career Recommendations
            </h5>

            <ul class="list-group mb-3">
              <% if (user.recommendations && user.recommendations.length > 0) { %>
                <% user.recommendations.forEach(rec => { %>
                  <li class="list-group-item">
                    <i class="fas fa-check-circle text-success"></i> <%= rec %>
                  </li>
                <% }) %>
              <% } else { %>
                <li class="list-group-item">No recommendations yet</li>
              <% } %>
            </ul>

            <div class="d-grid gap-2 mt-auto">
              <a href="/skill-gap" class="btn btn-success btn-custom">
                <i class="fas fa-tasks"></i> Skill Gap Analysis
              </a>
              <a href="/generate-roadmap" class="btn btn-primary btn-custom">
                <i class="fas fa-road"></i> Generate Roadmap
              </a>
            </div>
          </div>
        </div>
      </div>

    </div> <!-- END MAIN ROW -->

    <!-- ===== COURSES & LINKS ===== -->
    <div class="row g-4 mt-3">

      <!-- Suggested Courses -->
      <div class="col-md-6">
        <div class="card shadow-sm h-100">
          <div class="card-body">
            <h5 class="card-title text-warning">
              <i class="fas fa-book"></i> Suggested Courses
            </h5>

            <ul class="list-group">
              <% if (user.courses && user.courses.length > 0) { %>
                <% user.courses.forEach(course => { %>
                  <li class="list-group-item">
                    <a href="<%= course.url %>" target="_blank" class="text-decoration-none">
                      <i class="fas fa-graduation-cap text-primary"></i> 
                      <%= course.title %> (<%= course.platform %>)
                    </a>
                  </li>
                <% }) %>
              <% } else { %>
                <li class="list-group-item">No courses available</li>
              <% } %>
            </ul>
          </div>
        </div>
      </div>

      <!-- Useful Links -->
      <div class="col-md-6">
        <div class="card shadow-sm h-100">
          <div class="card-body">
            <h5 class="card-title text-danger">
              <i class="fas fa-link"></i> Useful Links
            </h5>

            <ul class="list-group">
              <% if (user.links && user.links.length > 0) { %>
                <% user.links.forEach(link => { %>
                  <li class="list-group-item">
                    <a href="<%= link %>" target="_blank" class="text-decoration-none">
                      <i class="fas fa-external-link-alt text-info"></i> <%= link %>
                    </a>
                  </li>
                <% }) %>
              <% } else { %>
                <li class="list-group-item">No links available</li>
              <% } %>
            </ul>
          </div>
        </div>
      </div>

    </div> <!-- END COURSES & LINKS -->

    <!-- ===== CAREER GUIDANCE ===== -->
    <div class="row mt-4">
      <div class="col-md-8 mx-auto">
        <div class="card shadow-sm text-center p-4">
          <h5 class="card-title text-primary">
            <i class="fas fa-user-graduate"></i> Career Guidance
          </h5>
          <p class="text-muted">Get AI-powered career advice tailored to your goals.</p>
          <a href="/career-advice" class="btn btn-primary btn-lg btn-custom">
            <i class="fas fa-lightbulb"></i> Get Career Advice
          </a>
        </div>
      </div>
    </div>

    <!-- ===== LOGOUT ===== -->
    <div class="text-center mt-5">
      <a href="/logout" class="btn btn-danger btn-lg btn-custom">
        <i class="fas fa-sign-out-alt"></i> Logout
      </a>
    </div>

  </div> <!-- END CONTAINER -->

  <!-- Bootstrap Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
