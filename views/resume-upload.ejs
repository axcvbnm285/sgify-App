<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Upload Resume | SGIFY</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

  <style>
    body {
      background: #f9fafc;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .upload-section {
      background: white;
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.08);
      margin-bottom: 2rem;
    }
    .suggestions-section {
      background: #fff;
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.08);
    }
    .btn-custom {
      border-radius: 30px;
      font-weight: 500;
    }
    .list-group-item {
      border: none;
      padding: 0.8rem 1rem;
    }
  </style>
</head>
<body>

  <div class="container py-5">

    <!-- ===== PAGE HEADER ===== -->
    <div class="text-center mb-5">
      <h1 class="fw-bold text-primary">Upload Your Resume</h1>
      <p class="lead text-muted">Weâ€™ll analyze your resume and suggest skills, courses, and career paths ðŸš€</p>
    </div>

    <!-- ===== RESUME UPLOAD FORM ===== -->
    <div class="upload-section">
      <form action="/resume-upload" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="resume" class="form-label fw-bold">
            <i class="fas fa-file-upload"></i> Choose Resume File
          </label>
          <input class="form-control" type="file" name="resume" id="resume" accept=".pdf,.doc,.docx" required>
          <div class="form-text">Accepted formats: PDF, DOC, DOCX</div>
        </div>

        <div class="text-center">
          <button type="submit" class="btn btn-primary btn-lg btn-custom">
            <i class="fas fa-cloud-upload-alt"></i> Upload Resume
          </button>
        </div>
      </form>
    </div>

    <!-- ===== SUGGESTIONS SECTION ===== -->
    <div class="suggestions-section mt-4">
      <h4 class="text-success mb-3">
        <i class="fas fa-lightbulb"></i> Suggested Improvements & Learning Paths
      </h4>

      <% if (suggestions && suggestions.length > 0) { %>
        <ul class="list-group">
          <% suggestions.forEach(suggestion => { %>
            <li class="list-group-item">
              <i class="fas fa-check-circle text-success"></i> <%= suggestion %>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p class="text-muted">No suggestions yet. Upload your resume to see insights.</p>
      <% } %>
    </div>

    <!-- ===== BACK TO DASHBOARD ===== -->
    <div class="text-center mt-5">
      <a href="/dashboard" class="btn btn-outline-secondary btn-lg btn-custom">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
      </a>
    </div>

  </div>

  <!-- Bootstrap Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
