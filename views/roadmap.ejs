<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Learning Roadmap</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background: #f8f9fa; }
    .progress { height: 25px; border-radius: 10px; }
    .step-card {
      margin-bottom: 1rem;
      padding: 1rem;
      border-radius: 8px;
      border-left: 6px solid #0d6efd;
      background: #fff;
      box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    }
    .step-card.completed {
      border-left-color: #198754;
      background: #e9f9ee;
      text-decoration: line-through;
      opacity: 0.85;
    }
    .projects {
      margin-top: 2rem;
      padding: 1rem;
      background: #fff3cd;
      border-radius: 8px;
    }
  </style>
</head>
<body>
  <div class="container py-5">
    <h2 class="text-center mb-4">ðŸ“Œ Learning Roadmap for <%= user.name %></h2>

    <!-- Progress Bar -->
    <div class="progress mb-4">
      <div id="progress-bar" class="progress-bar bg-success" style="width: 0%">0%</div>
    </div>

    <!-- Steps -->
    <form id="roadmap-form">
      <% steps.forEach((step, index) => { %>
        <div class="step-card <%= step.completed ? 'completed' : '' %>">
          <div class="form-check mb-2">
            <input type="checkbox" class="form-check-input me-2 step-checkbox"
                   id="step-<%= index %>" <%= step.completed ? "checked" : "" %>>
            <label for="step-<%= index %>" class="fw-bold"><%= step.title %></label>
          </div>

          <% if (step.tasks && step.tasks.length > 0) { %>
            <ul class="mb-0">
              <% step.tasks.forEach(task => { %>
                <li><%= task %></li>
              <% }) %>
            </ul>
          <% } %>
        </div>
      <% }) %>
    </form>

    <!-- Projects -->
    <% if (projects && projects.length > 0) { %>
      <div class="projects">
        <h4>ðŸ’¡ Suggested Projects</h4>
        <ul>
          <% projects.forEach(p => { %>
            <li><%= p %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <div class="text-center mt-4">
      <a href="/dashboard" class="btn btn-outline-primary">â¬… Back to Dashboard</a>
    </div>
  </div>

  <script>
    const checkboxes = document.querySelectorAll(".step-checkbox");
    const progressBar = document.getElementById("progress-bar");

    function updateProgress() {
      const total = checkboxes.length;
      const completed = document.querySelectorAll(".step-checkbox:checked").length;
      const percent = Math.round((completed / total) * 100);

      progressBar.style.width = percent + "%";
      progressBar.innerText = percent + "%";

      // Save progress via AJAX
      const completedSteps = [];
      checkboxes.forEach((cb, index) => {
        if (cb.checked) completedSteps.push(index);
      });

      fetch("/roadmap/update", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ completedSteps })
      });
    }

    // Initialize progress on load
    updateProgress();
    checkboxes.forEach(cb => cb.addEventListener("change", updateProgress));
  </script>
</body>
</html>
